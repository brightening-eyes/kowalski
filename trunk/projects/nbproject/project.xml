<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://www.netbeans.org/ns/project/1">
    <type>org.netbeans.modules.ant.freeform</type>
    <configuration>
        <general-data xmlns="http://www.netbeans.org/ns/freeform-project/1">
            <!-- Do not use Project Properties customizer when editing this file manually. -->
            <name>Kowalski</name>
            <properties>
                <property name="project.dir">../</property>
                <property name="ant.script">${project.dir}/build.xml</property>
            </properties>
            <folders>
                <source-folder>
                    <label>kowalski</label>
                    <location>${project.dir}</location>
                </source-folder>
                <source-folder>
                    <label>kowalski/src/editor</label>
                    <location>${project.dir}/kowalski/src/editor</location>
                </source-folder>
                <source-folder>
                    <label>kowalski/src/bindings/java</label>
                    <location>${project.dir}/kowalski/src/bindings/java</location>
                </source-folder>
                <source-folder>
                    <label>kowalski/src/test/java</label>
                    <location>${project.dir}/kowalski/src/test/java</location>
                </source-folder>
                <source-folder>
                    <label>src/java</label>
                    <location>${project.dir}/src/java</location>
                </source-folder>
                <source-folder>
                    <label>test/java</label>
                    <location>${project.dir}/test/java</location>
                </source-folder>
                <source-folder>
                    <label>src/java</label>
                    <type>java</type>
                    <location>${project.dir}/src/java</location>
                </source-folder>
                <source-folder>
                    <label>test/java</label>
                    <type>java</type>
                    <location>${project.dir}/test/java</location>
                </source-folder>
            </folders>
            <ide-actions>
                <action name="build">
                    <script>${ant.script}</script>
                    <target>compile</target>
                </action>
                <action name="clean">
                    <script>${ant.script}</script>
                    <target>clean</target>
                </action>
                <action name="javadoc">
                    <script>${ant.script}</script>
                    <target>javadoc</target>
                </action>
                <action name="run">
                    <script>${ant.script}</script>
                    <target>run</target>
                </action>
                <action name="test">
                    <script>${ant.script}</script>
                    <target>test</target>
                </action>
                <action name="rebuild">
                    <script>${ant.script}</script>
                    <target>clean</target>
                    <target>compile</target>
                </action>
                <action name="run.single">
                    <script>nbproject/ide-file-targets.xml</script>
                    <target>run-selected-file-in-editor</target>
                    <context>
                        <property>run.class</property>
                        <folder>${project.dir}/src/editor</folder>
                        <pattern>\.java$</pattern>
                        <format>java-name</format>
                        <arity>
                            <one-file-only/>
                        </arity>
                    </context>
                </action>
                <action name="debug.single">
                    <script>nbproject/ide-file-targets.xml</script>
                    <target>debug-selected-file-in-editor</target>
                    <context>
                        <property>debug.class</property>
                        <folder>${project.dir}/src/editor</folder>
                        <pattern>\.java$</pattern>
                        <format>java-name</format>
                        <arity>
                            <one-file-only/>
                        </arity>
                    </context>
                </action>
                <action name="run.single">
                    <script>nbproject/ide-file-targets.xml</script>
                    <target>run-selected-file-in-java</target>
                    <context>
                        <property>run.class</property>
                        <folder>${project.dir}/src/bindings/java</folder>
                        <pattern>\.java$</pattern>
                        <format>java-name</format>
                        <arity>
                            <one-file-only/>
                        </arity>
                    </context>
                </action>
                <action name="run.single">
                    <script>nbproject/ide-file-targets.xml</script>
                    <target>run-selected-file-in-java</target>
                    <context>
                        <property>run.class</property>
                        <folder>${project.dir}/src/java</folder>
                        <pattern>\.java$</pattern>
                        <format>java-name</format>
                        <arity>
                            <one-file-only/>
                        </arity>
                    </context>
                </action>
            </ide-actions>
            <view>
                <items>
                    <source-folder style="packages">
                        <label>src/java</label>
                        <location>${project.dir}/src/java</location>
                    </source-folder>
                    <source-folder style="packages">
                        <label>test/java</label>
                        <location>${project.dir}/test/java</location>
                    </source-folder>
                    <source-file>
                        <location>${ant.script}</location>
                    </source-file>
                </items>
                <context-menu>
                    <ide-action name="build"/>
                    <ide-action name="rebuild"/>
                    <ide-action name="clean"/>
                    <ide-action name="javadoc"/>
                    <ide-action name="run"/>
                    <ide-action name="test"/>
                </context-menu>
            </view>
            <subprojects/>
        </general-data>
        <java-data xmlns="http://www.netbeans.org/ns/freeform-project-java/2">
            <compilation-unit>
                <package-root>${project.dir}/src/java</package-root>
                <classpath mode="compile">${project.dir}/lib/ant/ant.jar</classpath>
                <source-level>1.5</source-level>
            </compilation-unit>
            <compilation-unit>
                <package-root>${project.dir}/test/java</package-root>
                <unit-tests/>
                <classpath mode="compile">${project.dir}/lib/junit/junit.jar:${project.dir}/build/java:${project.dir}/build/javatest</classpath>
                <source-level>1.5</source-level>
            </compilation-unit>
        </java-data>
    </configuration>
</project>
